<div class="card">
    <div class="card-body">
        <h2>Edit Category</h2>
        <br>
        <form action="/admin/categories/edit" method="POST">
            <input type="hidden" name="id" value="{{category._id}}">
            <label for="name">Name: </label>
                <input type="text" id="name" name="name" placeholder="{{category.name}}" class="form-control">
                <br>
            <label for="slug">Slug: </label>
                <input type="text" id="slug" name="slug" placeholder="{{category.slug}}" class="form-control">
                <br>
            <button type="submit" class="btn btn-success">Edit category</button>
        </form>
    </div>
</div>